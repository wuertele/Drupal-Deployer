/**
 * Implementation of hook_install().
 */
function pingback_install() {
  switch ($GLOBALS['db_type']) {
    case 'mysql':
    case 'mysqli':
      db_query("CREATE TABLE {pingback_sent} (
        nid int(10) unsigned NOT NULL,
        url varchar(255) NOT NULL,
        timestamp int(11) NOT NULL,
        PRIMARY KEY (nid, url)
      )");
      break;
      
  }
}


  $output .= '<div>' . '&nbsp;);</div>';
  drupalforfirebug_log($output, 'hook_form_alter');

}

/**
* Implementation of hook_user()
*/
function drupalforfirebug_user($op, &$edit, &$account, $category = NULL) {
  $uid = ($account->uid) ? $account->uid : '*NEW*';

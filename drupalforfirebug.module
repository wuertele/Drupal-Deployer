/**
* Implementation of hook_menu()
*/
function drupalforfirebug_menu($may_cache) {
  if ($may_cache) {
   $items[] = array(
     'path' => 'admin/firebug/exec',
     'callback' => 'drupalforfirebug_get_exec_php_callback',
   );
  }

/**
*  Implementation of hook_nodeapi() 
*/
function drupalforfirebug_nodeapi(&$node, $op, $a3 = NULL, $a4 = NULL) {
  $nid = ($node->nid) ? $node->nid : '*NEW*';
  $output = '<fieldset>';
  $output .= '<legend><strong><em>' . $op . '</em> $node->'.$nid . '</strong></legend>';
  $output .= '<div>' . '&nbsp;$node = stdClass Object (' . '</div>';
  $output .= drupalforfirebug_array_compare(objectToArray($_SESSION['drupalforfirebug_nodes']['original'][$node->type][$nid]), objectToArray($node));
  $output .= '<div>' . '&nbsp;);</div>';
  drupalforfirebug_log($output, 'hook_nodeapi');
}

/**
*  Implementation of hook_form_alter()
*/
function drupalforfirebug_form_alter($formid, &$form) {
  $output = '<fieldset>';
  $output .= '<legend><strong>'. $formid .  '</strong></legend>';
  $output .= '<div>' . '&nbsp;$form = array (' . '</div>';
